@{
  Layout = "_Layout";
}

@using Menu.Models;

<h2>Flavors</h2>
<hr />
<br>
@if (@Model.Count == 0)
{
  <h3>No flavors have been added yet!</h3>
} 

<dl>
  @foreach(Flavor flavor in Model)
  {
    <dt>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</dt>
  }
</dl>
<hr />

<br>
<h5>@Html.ActionLink("Add flavor", "Create")</h5>